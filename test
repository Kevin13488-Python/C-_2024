#include <iostream>


int main()
{
    int x,y;
    char CalculateWay;
    
    printf("Calculate Way= (plus=a,minus=b,times=c,divide=d)");
    scanf("%c",&CalculateWay);
    printf("please input int x =");
    scanf("%d",&x);
    printf("please input int y=");
    scanf("%d",&y);
if (CalculateWay = "1") {
    printf("x + y");
}
if (CalculateWay = "2") {
    printf("x - y");
}
if (CalculateWay = "3") {
    printf("x * y");
}
if (CalculateWay = "4") {
    printf("x / y");
}

    return 0
}
